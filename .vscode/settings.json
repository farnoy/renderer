{
  "files.exclude": {
    "**/target": true,
    "vendor": true
  },
  "rust-analyzer.cargo.allFeatures": false,
  "rust-analyzer.cargo.features": [
    "standard_validation",
    "crash_debugging",
    "shader_reload"
  ],
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.updates.channel": "nightly",
  "editor.rulers": [
    120
  ],
  "editor.minimap.maxColumn": 80,
}
